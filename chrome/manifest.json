{
  "name": "Jira Express",
  "version": "1.0.0",
  "version_name": "1.0.0",
  "description": "The fastest way to browse and search your Jira issues.",
  "manifest_version": 2,
  "short_name": "jira-express",
  "permissions": [
    "storage",
    "cookies",
    "https://*.atlassian.com/*",
    "https://*.atlassian.net/*",
    "https://atlassian.net/*",
    "https://atlassian.com/*"
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "logo/logo128.png"
  },
  "icons": {
    "16": "logo/logo16.png",
    "32": "logo/logo32.png",
    "48": "logo/logo48.png",
    "128": "logo/logo128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}

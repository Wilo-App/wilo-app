{
  "name": "wilo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "REACT_APP_RUNTIME_ENV=browser react-scripts start",
    "watch": "./scripts/watch.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "typecheck": "tsc",
    "lint": "eslint 'src/' --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint --fix 'src/' --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "lodash": "^4.17.15",
    "polished": "^3.4.1",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "react-spring": "^8.0.27",
    "styled-components": "^4.4.0",
    "styled-icons": "^8.4.1",
    "styled-normalize": "^8.0.6",
    "typescript": "^3.6.4",
    "use-http": "^0.1.95"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.88",
    "@types/jest": "24.0.18",
    "@types/lodash": "^4.14.118",
    "@types/node": "12.7.3",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "@types/react-router-dom": "^5.1.0",
    "@types/styled-components": "^4.1.4",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "webpack-extension-reloader": "^1.1.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn tsc"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  }
}
